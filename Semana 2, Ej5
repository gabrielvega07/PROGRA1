using System;

namespace d√≠a_laboral
{
    class Program
    {
        static void Main(string[] args)
        {
            int dia = 1;

            Console.WriteLine("Escoja un dia de la semana");
            Console.WriteLine("1.Lunes");
            Console.WriteLine("2.Martes");
            Console.WriteLine("3.Miercoles");
            Console.WriteLine("4.Jueves");
            Console.WriteLine("5.Viernes");
            Console.WriteLine("6.Sabado");
            Console.WriteLine("7.Domingo");
            
            dia = int.Parse(Console.ReadLine());

            switch (dia)
            {
                case 1:
                    Console.Write("Lunes, Si es dia habil");
                    break;

                case 2:
                    Console.Write("Martes, Si es dia habil");
                    break;

                case 3:
                    Console.Write("Miercoles, Si es dia habil");
                    break;

                case 4:
                    Console.Write("Jueves, Si es dia habil");
                    break;

                case 5:
                    Console.Write("Viernes, Si es dia habil");
                    break;

                case 6:
                    Console.Write("Sabado, No es dia habil");
                    break;

                case 7:
                    Console.Write("Domingo, No es dia habil");
                    break;

                case 8:

                    break;

            }
        }
    }
}
